# Supabase Configuration
# Get these from your Supabase project settings: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="your-supabase-project-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Postgres Connection (from Vercel/Supabase)
# Get these from Supabase project settings under Database > Connection string
POSTGRES_URL="your-postgres-connection-url"
POSTGRES_URL_NON_POOLING="your-postgres-non-pooling-url"
POSTGRES_PRISMA_URL="your-postgres-prisma-url"
POSTGRES_USER="postgres"
POSTGRES_HOST="your-postgres-host"
POSTGRES_PASSWORD="your-postgres-password"
POSTGRES_DATABASE="postgres"
SUPABASE_JWT_SECRET="your-supabase-jwt-secret"

# PTM (Parent-Teacher Meeting) Configuration
# Enable mock/demo mode (uses mock teacher ID instead of requiring login)
NEXT_PUBLIC_PTM_MOCK_MODE="true"
# Mock teacher ID for demo mode (Daniel Tan - form teacher with 48 students)
NEXT_PUBLIC_PTM_MOCK_TEACHER_ID="3cdec55d-49c8-432a-b965-4f1670b4bd0f"

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="your-openai-api-key"
# Optional: Organization ID (only if you have multiple orgs)
OPENAI_ORG_ID="your-openai-org-id"

# Notion Integration (Read-Only)
# Create integration at: https://www.notion.so/profile/integrations
# Make sure to share your pages/databases with the integration
NOTION_API_KEY="ntn_your_notion_integration_secret"
NOTION_VERSION="2022-06-28"
